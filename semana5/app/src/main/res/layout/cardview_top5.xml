<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvTop5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margen_activity"
    android:padding="@dimen/margen_activity"
    card_view:cardCornerRadius="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margen_activity">


        <ImageView
            android:id="@+id/imgFotoTop"
            android:layout_width="@dimen/tamaño_foto"
            android:layout_height="@dimen/tamaño_foto"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>
        <RelativeLayout
            android:id="@+id/rlDatosTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/left">



            <TextView
                android:id="@+id/tvNombreCVTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pnombre"
                android:textSize="@dimen/nombre_mascota"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/left"
                />




        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>